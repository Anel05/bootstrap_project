@model IEnumerable<bootstrap_project.Models.Order>

@{
    ViewData["Title"] = "Список Заказов";
}

<h1>Список Заказов</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Продукт</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Name</td>
                <td>@order.Address</td>
                <td>@order.Phone</td>
                <td>@order.Product.Name</td> <!-- Предполагается, что у вас есть навигационное свойство Product -->
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Order" asp-action="Create">Добавить Заказ</a>








