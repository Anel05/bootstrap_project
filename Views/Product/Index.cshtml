@model IEnumerable<bootstrap_project.Models.Product>

@{
    ViewData["Title"] = "Список Продуктов";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Product" asp-action="Create">Добавить Продукт</a>



